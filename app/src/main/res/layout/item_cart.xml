<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#483D47">

        <androidx.cardview.widget.CardView
            android:id="@+id/home_Item_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp">
            <ImageView
                android:id="@+id/imgavataCart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img_19"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/name_loai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/home_Item_border">
            <TextView
                android:id="@+id/tvNameCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Một chút nhớ em đấy"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_below="@id/tvNameCart"
                android:layout_marginTop="8dp"
                android:id="@+id/home_Item_loai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text=""
                android:textSize="16dp" />
            <LinearLayout
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/btnCongCart"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:background="@drawable/add"
                    android:orientation="horizontal"
                    android:layout_height="30dp">
                    <ImageView
                        android:id="@+id/btnThemSL"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/add"
                        android:src="@drawable/baseline_add_24"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnTruCart"
                    android:layout_width="30dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/add"
                    android:orientation="horizontal"
                    android:layout_height="30dp">
                    <ImageView
                        android:id="@+id/btnTruSL"
                        android:paddingHorizontal="3dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/add"
                        android:src="@drawable/iconminus"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/gia_tien_home_bg"
                android:layout_gravity="right">
                <TextView
                    android:id="@+id/tvPriceCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30.000VND"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"/>
                <EditText
                    android:id="@+id/edSoluong"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/add"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>