<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen.Login.SignUpActivity"
    android:background="#362C35"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_west_24"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textColor="#EBE7DD"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
    <ImageView
        android:layout_marginLeft="120dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img_3"/>
    <RelativeLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/textlogin">

        <!-- INPUT -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="320dp"
            android:src="@drawable/baseline_visibility_off_24"
            />
        <EditText
            android:id="@+id/change_password"
            android:layout_marginLeft="50dp"
            android:text=""
            android:hint="Password"
            android:textSize="23dp"
            android:padding="10dp"
            android:textColorHint="#AEAEAE"
            android:layout_width="270dp"
            android:layout_height="60dp"/>

        <!-- ICON -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_lock_24"
            android:padding="3dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/textlogin">

        <!-- INPUT -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="320dp"
            android:src="@drawable/baseline_visibility_off_24"/>
        <EditText
            android:id="@+id/change_newpassword"
            android:layout_marginLeft="50dp"
            android:text=""
            android:hint="New Password"
            android:textSize="23dp"
            android:padding="10dp"
            android:textColorHint="#AEAEAE"
            android:layout_width="270dp"
            android:layout_height="60dp"/>

        <!-- ICON -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            android:src="@drawable/baseline_lock_24"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/textlogin">

        <!-- INPUT -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="320dp"
            android:src="@drawable/baseline_visibility_off_24"/>

        <EditText
            android:id="@+id/change_newpassword2"
            android:layout_marginLeft="50dp"
            android:text=""
            android:hint="New Password"
            android:textSize="23dp"
            android:padding="10dp"
            android:textColorHint="#AEAEAE"
            android:layout_width="270dp"
            android:layout_height="60dp"/>

        <!-- ICON -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            android:src="@drawable/baseline_lock_24"/>

    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/change_button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="Change"
        android:textSize="20dp"
        android:background="@drawable/round_button"/>


</LinearLayout>