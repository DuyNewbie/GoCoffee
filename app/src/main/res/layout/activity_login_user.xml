<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen.Login.LoginNewUserActivity"
    android:background="#201520"
    android:orientation="vertical"
    >


    <ImageView
        android:layout_width="250dp"
        android:layout_height="230dp"
        android:src="@drawable/img_3"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:background="#EFE4C8">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/new_username"
                android:hint="User"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_person"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="10dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:background="#EFE4C8">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/new_password"
                android:hint="Password"
                android:textSize="20dp"
                android:drawableLeft="@drawable/icon_0lock"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot password ?"
        android:textSize="18dp"
        android:textColor="#D3CDBE"
        android:layout_marginLeft="230dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="Remember Password"
            android:textColor="#FFFFFF"
 />
    </LinearLayout>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="10dp"
            android:background="@drawable/custom_edittext"
            android:backgroundTint="#EFE4C8">

            <Button
                android:id="@+id/btn_Dang_Nhap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:text="Login"
                android:padding="4dp"
                android:backgroundTint="#EFE4C8"
                android:textColor="#362C35"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="26dp"
            android:layout_marginStart="10dp"
            android:textColor="#EFE4C8"
            android:textAlignment="center"/>



</LinearLayout>